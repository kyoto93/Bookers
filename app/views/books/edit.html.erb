<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <h4><%= f.submit 'Update Book' %></h4>

<% end %>

   <%= link_to "show",book_path(@book.id) %>
   |
   <%= link_to "back", books_path %>
