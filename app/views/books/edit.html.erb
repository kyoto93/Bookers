<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>

<h1>Editing Book</h1>


<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

    <% if @book.errors.any? %>
     <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>




    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <h4><%= f.submit 'Update Book' %></h4>

<% end %>

